src_install() {
	local ver="${PV}"
	local maj="${ver%%.*}"
	local min="${ver##*.}"
	local med="${ver%.*}"
	med="${med#*.}"

	dodir /etc/shared
	umask 022
	printf "RM %s" ${PVR} > \
		"${D}/etc/shared/rm-release"

	local flag
	for flag in ${USE}; do echo ${flag}; done | sort -u > "${D}/etc/shared/rm-flags"

	insinto /etc/shared
	newins "${FILESDIR}/rm-release-443.html" "rm-release.html"
}
